{% block title %}Jeux
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	<div class="container">

		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for game in allGames %}

				<div class="col-2 my-1">
					<div class="card h-100 pt-2">
						<img src={{game.image}} class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{game.nameArticle}}</h5>
							<p class="card-text">{{game.description}}</p>
							<p class="card-text"><b>{{game.price}}
