{% extends 'base.html.twig' %}

{% block title %}Hello MainPageController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for article in allArticles %}

				<div class="col-2">
					<div class="card h-auto">
						<img src={{article.image}} class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{article.nameArticle}}</h5>
							<p class="card-text">{{article.description}}</p>
							<p class="card-text">{{article.price}}
								â‚¬</p>
						</div>
						<button type="button" class="btn btn-success">Ajouter au panier</button>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>
{% endblock %}
