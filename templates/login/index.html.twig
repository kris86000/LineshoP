{% extends 'base.html.twig' %}

{% block title %}Login!
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container align-items-center">
		<div class="row w-50 mx-auto">
			<div class="col text-center">
				<h3>Login or
					<a href="register">register here</a>
				</h3>
			</div>
		</div>
		<div class="row w-50 mx-auto">
			<div class="col">
				<form action="{{ path('app_login') }}" method="post">
					<label class="form-label" for="username">Email:</label>
					<input class="form-control mb-2" type="text" id="username" name="_username" value="{{ last_username }}" placeholder=" enter your email"/>

					<label class=" form-label" for=" password">Password:</label>
					<input
					class="form-control mb-4" placeholder="and password" type="password" id="password" name="_password"/>

					{# If you want to control the URL the user is redirected to on success
																																																																																																																																																																																																											        <input type="hidden" name='app_main_page' value="/account"/> #}

					<button class="btn btn-primary w-100" type="submit">
						Login
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
